[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
    versioneer.py,
    bluesky_widgets/_version.py,
    docs/source/conf.py
    bluesky_widgets/examples/pyFAI_dialog.py,
# There are some errors produced by 'black', therefore unavoidable    
ignore = E203, W503  
max-line-length = 115
